<div class="flex flex-col">
  <div class="z-1 relative bg-no-repeat bg-cover grid grid-cols-3 h-10vph w-screen" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @movie.poster_url %>)" >
    <div class="play grid grid-rows-3 flex-col order-2 h-full">
    <div class="order-1 h-1/3"></div>
      <div class="justify-self-center self-center order-2 h-1/3">
        <%= show_svg('play2.svg') %>
      </div>
      <div class="order-3 h1/3 self-end">
        <h2 class="text-white text-xl mb-3">SYNOPSIS</h2>
        <h2 class="text-white font-inter text-sm grow-1 mb-5"><%= @movie.overview %></h2>
      </div>
    </div>
    <div class="content-main w-30pv order-1 self-end ml-5 mb-5">
      <h1 class="text-6xl text-white pb-2"><%= @movie.title %></h1>
      <h2 class="text-white text-xl italic pb-2">"<%= @movie.tagline %>"</h2>
      <p class="text-white font-bold">Cuacklist Rating: <%= @movie.rating.round(1)%> out of <%= @movie.vote_count %> votes.</p>
      <p class="text-white text-sm opacity-80">Release Date: <%= @movie.release_date %></p>
      <p class="text-white text-sm opacity-80"><%= @movie.genre %></p>
      <p class="text-white text-sm  opacity-75">Original Language: <%= @movie.original_language.upcase %></p>
    </div>
    <div class="add order-3">
    </div>
  </div>
</div>
